<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.AgeSelection">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/Age_selection_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>


    <!--<LinearLayout
        android:id="@+id/Age_selection_layout_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal" />-->

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:transitionName="dotIND"
        android:id="@+id/Age_selection_layout_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/red"
        app:dotsCornerRadius="8dp"
        app:dotsSize="12dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="3.5"
        app:selectedDotColor="@color/red"
        app:progressMode="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/Age_selection_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/nxtbtn_red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin= "20dp"
        android:transitionName="nextbtnTrans"
        android:src="@drawable/ic_arrow_forward" />

</RelativeLayout>